---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Content } from 'astro:content';

interface Props {
	slug: string;
}

export async function getStaticPaths() {
	const blogPosts = await getCollection('blog');
	return blogPosts
		.filter((post) => !post.data.draft)
		.map((post) => ({
			params: { slug: post.slug },
			props: { post },
		}));
}

const { post } = Astro.props;
const { Content: PostContent } = await post.render();
---

<Layout title={post.data.title}>
	<div class="blog-post-container">
		<article class="blog-post">
			<header class="blog-post-header">
				<h1 class="blog-post-title">{post.data.title}</h1>
				<div class="blog-post-meta">
					<time datetime={post.data.pubDate.toISOString()}>
						{post.data.pubDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})}
					</time>
					{post.data.updatedDate && (
						<span class="blog-post-updated">
							Updated: {post.data.updatedDate.toLocaleDateString('en-US', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})}
						</span>
					)}
					{post.data.author && <span class="blog-post-author">by {post.data.author}</span>}
				</div>
				{post.data.tags.length > 0 && (
					<div class="blog-post-tags">
						{post.data.tags.map((tag) => (
							<span class="blog-tag">{tag}</span>
						))}
					</div>
				)}
			</header>

			<div class="blog-post-content">
				<PostContent />
			</div>

			<footer class="blog-post-footer">
				<a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
			</footer>
		</article>
	</div>
</Layout>

<style>
	.blog-post-container {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem;
	}

	.blog-post {
		background: var(--sl-color-white);
	}

	.blog-post-header {
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid var(--sl-color-gray-5);
	}

	.blog-post-title {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--sl-color-text);
		line-height: 1.2;
	}

	.blog-post-meta {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		align-items: center;
		font-size: 0.875rem;
		color: var(--sl-color-gray-1);
		margin-bottom: 1rem;
	}

	.blog-post-updated {
		color: var(--sl-color-gray-1);
	}

	.blog-post-author {
		color: var(--sl-color-gray-1);
	}

	.blog-post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.blog-tag {
		background: var(--sl-color-accent-low);
		color: var(--sl-color-accent);
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.blog-post-content {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--sl-color-text);
	}

	.blog-post-content :global(h2) {
		font-size: 1.75rem;
		margin-top: 2rem;
		margin-bottom: 1rem;
		color: var(--sl-color-text);
	}

	.blog-post-content :global(h3) {
		font-size: 1.5rem;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
		color: var(--sl-color-text);
	}

	.blog-post-content :global(p) {
		margin-bottom: 1rem;
	}

	.blog-post-content :global(ul),
	.blog-post-content :global(ol) {
		margin-bottom: 1rem;
		padding-left: 2rem;
	}

	.blog-post-content :global(li) {
		margin-bottom: 0.5rem;
	}

	.blog-post-content :global(code) {
		background: var(--sl-color-gray-5);
		padding: 0.125rem 0.375rem;
		border-radius: 4px;
		font-size: 0.9em;
		font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
	}

	.blog-post-content :global(pre) {
		background: var(--sl-color-gray-5);
		padding: 1rem;
		border-radius: 8px;
		overflow-x: auto;
		margin-bottom: 1rem;
	}

	.blog-post-content :global(pre code) {
		background: none;
		padding: 0;
	}

	.blog-post-content :global(blockquote) {
		border-left: 4px solid var(--sl-color-accent);
		padding-left: 1rem;
		margin-left: 0;
		margin-bottom: 1rem;
		color: var(--sl-color-gray-1);
		font-style: italic;
	}

	.blog-post-footer {
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid var(--sl-color-gray-5);
	}

	.back-to-blog {
		color: var(--sl-color-accent);
		font-weight: 500;
	}

	.back-to-blog:hover {
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.blog-post-container {
			padding: 1rem;
		}

		.blog-post-title {
			font-size: 2rem;
		}

		.blog-post-content {
			font-size: 1rem;
		}
	}
</style>

